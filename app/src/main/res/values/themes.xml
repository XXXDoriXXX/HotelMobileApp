<resources>
    <style name="Theme.HotelApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Основні кольори -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorSecondary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <!-- Текст -->
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="android:textColorSecondary">?attr/colorOnSecondary</item>

        <!-- Колір іконок -->
        <item name="colorControlNormal">@color/colorOnSecondary</item>
        <item name="colorControlActivated">@color/colorSecondary</item>

        <!-- Фон -->
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorError">#B00020</item>
        <item name="colorOnError">#FFFFFF</item>

        <!-- Акценти -->
        <item name="colorAccent">@color/colorSecondary</item>
    </style>
</resources>
