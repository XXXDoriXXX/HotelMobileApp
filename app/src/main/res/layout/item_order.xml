<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp">

        <ImageView
            android:id="@+id/order_hotel_image"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_marginEnd="12dp"
            android:src="@drawable/default_image" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/order_hotel_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hotel Name"
                android:textSize="18sp"
                android:textColor="?attr/colorOnPrimary"
                android:fontFamily="@font/roboto_bold"/>

            <TextView
                android:id="@+id/order_room_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room: VIP"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSecondary"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/order_dates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jan 10 - Jan 15"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSecondary"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/order_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total: $999"
                android:textSize="16sp"
                android:textColor="@color/colorSecondary"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto_bold"/>
        </LinearLayout>
        <TextView
            android:id="@+id/order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/status_label_background"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:text="Підтверджено"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:elevation="3dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
